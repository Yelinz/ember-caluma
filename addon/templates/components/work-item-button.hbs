<UkButton
  ...attributes
  @type={{@type}}
  @disabled={{or @loading this.mutate.isRunning}}
  @active={{@active}}
  @loading={{or @disabled @loading this.mutate.isRunning}}
  @color={{or @color "default"}}
  @size={{@size}}
  @title={{@title}}
  @on-click={{perform this.mutate}}
>
  {{#if (has-block)}}
    {{yield}}
  {{else if @label}}
    {{@label}}
  {{else}}
    {{t (concat "caluma.mutate-work-item." @mutation)}}
  {{/if}}
</UkButton>
